
#! /bin/sh

# Author: Jamie Alexandre, 2012
#
# /etc/init.d/kalite

### BEGIN INIT INFO
# Provides:          kalite
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: ka-lite daemon, a local Khan Academy content server
### END INIT INFO

case "$1" in
    start)
        echo "Starting ka-lite!"
        #run ka-lite as the owner of the project folder, and not as root
        su `stat --format="%U" "{{ role_data_dir }}/kalite/.."` -c "{{ role_data_dir }}/kalite/../scripts/start.sh"
        ;;
    stop)
        echo "Shutting down ka-lite!"
        echo
        "{{ role_data_dir }}/kalite/../scripts/stop.sh"
        ;;
esac

